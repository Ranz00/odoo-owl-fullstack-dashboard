<templates xml:space="preserve">
    <t t-name="odoo_owl_dashboard.DashboardMain" owl="1">
        <div class="o_dashboard_container p-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow-sm p-3 bg-white rounded">
                        <h5>Total Orders</h5>
                        <p class="h2 text-primary"><t t-esc="state.stats.count"/></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm p-3 bg-white rounded">
                        <h5>Total Revenue</h5>
                        <p class="h2 text-success">
                            <t t-esc="state.stats.currency"/> <t t-esc="state.stats.total_amount"/>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
